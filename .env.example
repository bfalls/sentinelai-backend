# SentinelAI backend environment variables
SENTINELAI_ENV=local
SENTINELAI_LOG_LEVEL=INFO
SENTINELAI_HOST=0.0.0.0
SENTINELAI_PORT=8000
SENTINELAI_DB_URL=sqlite:///./sentinelai.db
# Override in production with an absolute path to a persistent location,
# for example: SENTINELAI_DB_URL=sqlite:////var/lib/sentinelai/sentinelai.db

# Uvicorn
UVICORN_RELOAD=true

OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=30.0
DEBUG_AI_ENDPOINTS=false
